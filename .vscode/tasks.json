{
    "version": "0.1.0",
    "command": "npm",
    "isShellCommand": true,
    "showOutput": "always",
    "suppressTaskName": true,
    "tasks": [
        {
            "taskName": "start",
            "args": ["start"]
        },
        {
            "taskName": "validate",
            "isTestCommand": true,
            "args": ["run", "validate"]
        },
        {
            "taskName": "demo",
            "args": ["run", "build:demo"]
        }
    ]
}